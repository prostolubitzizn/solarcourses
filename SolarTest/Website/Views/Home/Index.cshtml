@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Birthdays</h1>
    <div id="myform">
    <b>Simple form with name and age ...</b>
        <table>
            <tr>
                <td>Id:</td>
                <td><input type="text" id="id"></td>
            </tr>
            <tr>
                <td>Name:</td>
                <td><input type="text" id="name"></td>
            </tr>
            <tr>
                <td>BirthDate:</td>
                <td><input type="text" id="birthDate"></td>
            </tr>
            <tr>
                <td>Photo:</td>
                <td><input type="text" id="photo"></td>
            </tr>
            <tr>
                <td>Upload photo:</td>
            </tr>

            <tr>
                <td><input type="button" id="add" value="Add" onclick="Javascript:addBirthday()"></td>
            </tr>
            
            <tr>
                <td><input type="button" id="soon" value="Birthdays Soon" onclick="Javascript:getSoonBirthdays()"></td>
            </tr>
            <tr>
                <td><input type="button" id="today" value="Birthdays Today" onclick="Javascript:getTodayBirthdays()"></td>
            </tr>
            <tr>
                <td><input type="button" id="outdated" value="Birthdays Outdated" onclick="Javascript:getOutDatedBirthdays()"></td>
            </tr>
            <tr>
                <td><input type="button" id="all" value="Birthdays All " onclick="Javascript:refresh()"></td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
        </table>
    </div>
    <div id="mydata">
    <b>Current data in the system ...</b>
    <table id="myTableData"  border="1" cellpadding="2">
        <tr>
            <td>&nbsp;</td>
            <td><b>Id</b></td>
            <td><b>Name</b></td>
            <td><b>BirthDate</b></td>
            <td><b>Photo</b></td>
        </tr>
    </table>
    &nbsp;
     
    </div>
</div>